<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:padding="12dp"
  android:layout_width="match_parent" android:layout_height="match_parent">

  <EditText android:id="@+id/searchInput"
    android:hint="@string/search_hint"
    android:layout_width="match_parent" android:layout_height="wrap_content"/>

  <Button android:id="@+id/searchBtn" android:text="@string/search"
    android:layout_width="match_parent" android:layout_height="wrap_content"/>

  <androidx.recyclerview.widget.RecyclerView android:id="@+id/resultsList"
    android:layout_width="match_parent" android:layout_height="0dp"
    android:layout_weight="1"/>
</LinearLayout>
